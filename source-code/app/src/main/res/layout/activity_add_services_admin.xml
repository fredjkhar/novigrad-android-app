<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation"
    android:id="@+id/addServicesAdminLayout"
    tools:context=".adminActivities.AddServicesAdmin">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:minWidth="120dp"
        android:minHeight="35dp"
        android:text="Set service title"
        android:textColor="#272932"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextServiceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:alpha="0.8"
        android:background="@drawable/layout_edit_text_1"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Service title"
        android:inputType="textPersonName"
        android:minWidth="260dp"
        android:minHeight="45dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="#272932"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:minWidth="120dp"
        android:minHeight="35dp"
        android:text="Set the number of text fields"
        android:textColor="#272932"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextServiceTitle"
        app:layout_constraintTop_toBottomOf="@+id/editTextServiceTitle" />

    <EditText
        android:id="@+id/editTextNumberOfTextFields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:alpha="0.8"
        android:background="@drawable/layout_edit_text_1"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Number of text fields"
        android:inputType="number"
        android:minWidth="260dp"
        android:minHeight="45dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="#272932"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:minWidth="120dp"
        android:minHeight="35dp"
        android:text="Set the number of numerical fields"
        android:textColor="#272932"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextNumberOfTextFields"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberOfTextFields" />

    <EditText
        android:id="@+id/editTextTextNumberOfNumericalFields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:alpha="0.8"
        android:background="@drawable/layout_edit_text_1"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Number of numerical fields"
        android:inputType="number"
        android:minWidth="260dp"
        android:minHeight="45dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="#272932"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:minWidth="120dp"
        android:minHeight="35dp"
        android:text="Number of documents to be scanned"
        android:textColor="#272932"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextTextNumberOfNumericalFields"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNumberOfNumericalFields" />

    <EditText
        android:id="@+id/editTextNumberOfDocuments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:alpha="0.8"
        android:background="@drawable/layout_edit_text_1"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Number of documents"
        android:inputType="numberDecimal"
        android:minWidth="260dp"
        android:minHeight="45dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="#272932"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continueButtonAddService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"

        android:alpha="0.8"
        android:background="@drawable/layout_edit_text_1"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:minWidth="100dp"
        android:minHeight="50dp"
        android:text="continue"
        android:textAllCaps="false"
        android:textColorHint="#272932"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrice" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:minWidth="120dp"
        android:minHeight="35dp"
        android:text="Set price"
        android:textColor="#272932"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/editTextNumberOfDocuments"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberOfDocuments" />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:alpha="0.8"
        android:background="@drawable/layout_edit_text_1"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:minWidth="260dp"
        android:minHeight="45dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColorHint="#272932"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textViewPrice"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>
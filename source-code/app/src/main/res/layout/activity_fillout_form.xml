<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation"
    android:id="@+id/filloutFormLayout"
    tools:context=".clientActivities.FilloutFormActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/serviceNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/alegreya_sans_sc_light"
            android:text="Service"
            android:textAlignment="center"
            android:textColor="#272932"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/editTextsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/serviceNameEditText">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/documentsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/editTextsLinearLayout"/>

        <LinearLayout
            android:id="@+id/photosLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/documentsLinearLayout">
            <ImageView
                android:id="@+id/imageView66"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <Button
            android:id="@+id/submitServiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/layout_edit_text_1"
            android:fontFamily="@font/alegreya_sans_sc_light"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:alpha="0.8"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/photosLinearLayout"/>
    </RelativeLayout>
</ScrollView>
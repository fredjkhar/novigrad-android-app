<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorGradientEnd"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/upperRelativeLayout">

        <TextView
            android:id="@+id/from"
            android:layout_width="80dp"
            android:layout_height="40dp"

            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:alpha="0.7"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical|center_horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="from"

            android:textColorHint="#272932"
            android:textSize="22sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/startHourEditText"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/from"
            android:alpha="0.7"
            android:background="@drawable/layout_edit_text_1"
            android:ems="10"

            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical|center_horizontal"

            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColorHint="#272932"
            android:textSize="20sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/h"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/startHourEditText"
            android:alpha="0.7"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="h"

            android:textColorHint="#272932"
            android:textSize="22sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/startMinuteEditText"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/h"
            android:alpha="0.7"
            android:background="@drawable/layout_edit_text_1"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColorHint="#272932"
            android:textSize="20sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_below="@id/upperRelativeLayout"
        android:id="@+id/lowerRelativeLayout">

        <TextView
            android:id="@+id/to"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:alpha="0.7"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical|center_horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="to"
            android:textColorHint="#272932"
            android:textSize="22sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/endHourEditText"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/to"
            android:alpha="0.7"
            android:background="@drawable/layout_edit_text_1"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColorHint="#272932"
            android:textSize="20sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/h1"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/endHourEditText"
            android:alpha="0.7"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal|center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="h"
            android:textColorHint="#272932"
            android:textSize="22sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/endMinuteEditText"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/h1"
            android:alpha="0.7"
            android:background="@drawable/layout_edit_text_1"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColorHint="#272932"
            android:textSize="20sp"
            android:textStyle="normal" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/lowerRelativeLayout"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addTimeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:alpha="0.7"
            android:background="@drawable/layout_edit_text_1"
            android:fontFamily="@font/alegreya_sans_sc_light"
            android:text="set time"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_end"
    android:orientation="vertical">

    <TextView
        android:id="@+id/firstNameDeleteDialogx"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="22sp"
        android:textColor="#272932"
        android:paddingStart="15dp"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/lastNameDeleteDialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="22sp"
        android:paddingStart="15dp"
        android:textColor="#272932"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/emailDeleteDialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="22sp"
        android:paddingStart="15dp"
        android:textColor="#272932"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/usernameDeleteDialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="22sp"
        android:paddingStart="15dp"
        android:textColor="#272932"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/passwordDeleteDialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="22sp"
        android:textColor="#272932"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:paddingStart="15dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonDeleteUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/alegreya_sans_sc_light"
            android:background="@drawable/toggle_button"
            android:text="Delete"
            android:textColor="#272932"
            android:textStyle="bold"
            android:textSize="22sp" />

    </LinearLayout>


</LinearLayout>